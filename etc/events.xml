<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <!-- Conversion event-->
    <event name="sales_order_place_after">
        <observer name="impreseeConversionObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ConversionObserver" />
    </event>
    <event name="sales_order_save_after">
        <observer name="impreseeConversionObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ConversionObserver" />
    </event>
    <!-- Add to cart event-->
    <event name="checkout_cart_add_product_complete">
        <observer name="impreseeAddToCartObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\AddToCartObserver" />
    </event>
    <!-- Remove item from cart event-->
    <event name="sales_quote_remove_item">
        <observer name="impreseeRemoveFromCartObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\RemoveFromCartObserver" />
    </event>
    <!-- Login event-->
    <event name="customer_login">
        <observer name="impreseeLoginObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\CustomerLoginObserver" />
    </event>
    <!-- Create account -->
    <event name="customer_register_success">
        <observer name="impreseeRegisterObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\CustomerCreateAccountObserver" />
    </event>
    <!-- Wishlist -->
    <event name="wishlist_add_product">
        <observer name="impreseeRegsiterAddToWishlistObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\AddToWishlistObserver" />
    </event>
    <!-- Compare -->
    <event name="catalog_product_compare_add_product">
        <observer name="impreseeRegsiterAddToCompareObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\AddToCompareObserver" />
    </event>
    <event name="catalog_product_compare_remove_product">
        <observer name="impreseeRegsiterRemoveFromCompareObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\RemoveFromCompareObserver" />
    </event>
    <event name="catalog_product_compare_item_collection_clear">
        <observer name="impreseeRegsiterClearCompareObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ClearCompareListObserver" />
    </event>
    <!--Changes in attribute or stock-->
    <event name="catalog_product_save_after">
        <observer name="impreseeChangeAttributesObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ProductStockChangeObserver" />
    </event>
    <!--Changes in stock-->
    <event name="checkout_submit_all_after">
        <observer name="impreseeChangeStockObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ProductStockChangeObserver" />
    </event>
    <event name="cataloginventory_stock_revert_products_sale">
        <observer name="impreseeChangeStockObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ProductStockChangeObserver" />
    </event>
    <event name="sales_order_item_cancel">
        <observer name="impreseeChangeStockObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ProductStockChangeObserver" />
    </event>
    <!--Add new product-->
    <event name="catalog_product_new_action">
        <observer name="impreseeCreateProductObserver" instance="ImpreseeAI\ImpreseeVisualSearch\Observer\ProductStockChangeObserver" />
    </event>

</config>
